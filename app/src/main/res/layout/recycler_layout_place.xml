<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:foregroundTint="@color/design_default_color_error">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="75dp"
        android:layout_height="92dp"
        android:background="@drawable/borde"
        android:defaultFocusHighlightEnabled="true"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landscape_photography_tips_yosemite_valley_feature"
        tools:srcCompat="@drawable/landscape_photography_tips_yosemite_valley_feature" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

    <Button
        android:id="@+id/btn_verMas"
        style="@style/FirebaseUI.Button"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:backgroundTint="#75DC62"
        android:text="Ver mas"
        android:textSize="8.5sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:layout_editor_absoluteX="1dp" />

    <ImageButton
        android:id="@+id/ibtn_favorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:backgroundTint="#75DC62"
        android:foregroundTint="#9A0000"
        android:scaleType="centerCrop"
        android:shadowColor="#00FFFFFF"
        android:src="@drawable/heart_regular"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:tint="#D40000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/heart_regular" />

</androidx.constraintlayout.widget.ConstraintLayout>