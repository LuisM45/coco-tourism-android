<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="75dp"
        android:layout_height="92dp"
        android:background="@drawable/borde"
        android:defaultFocusHighlightEnabled="true"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landscape_photography_tips_yosemite_valley_feature"
        tools:srcCompat="@drawable/landscape_photography_tips_yosemite_valley_feature" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

    <Button
        android:id="@+id/btn_favoritos"
        style="@style/FirebaseUI.Button"
        android:layout_width="27dp"
        android:layout_height="35dp"
        android:backgroundTint="#75DC62"
        android:insetLeft="-11dp"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        app:icon="@drawable/heart_regular"
        app:iconTint="#E84E4E"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-8dp" />

    <Button
        android:id="@+id/btn_verMas"
        style="@style/FirebaseUI.Button"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:backgroundTint="#75DC62"
        android:text="Ver mas"
        android:textSize="8.5sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>